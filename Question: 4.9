#include <stdio.h>

int main(){
    
    int n, value, sum = 0;
    float average;

    printf("Enter numbers to sum:  \n");
    scanf("%d",&n);

    for (int i = 1; i <= n; i++)
    {
        printf("Enter number %d : \n",i);
        scanf("%d",&value);
        sum += value;
    }

    average = (float)sum/n;

    printf("The sum is %d\n",sum);
    printf("The average is %.2f\n",average);
    
    return 0;
}
