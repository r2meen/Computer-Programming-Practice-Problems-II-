// works till 13!

#include <stdio.h>

int main() {
    int n, i;
    long factorial = 1;
    
    printf("Enter a non-negative integer: ");
    scanf("%d", &n);
    
    if (n < 0) {
        printf("Error, Enter a non-negative number: \n");
        return 1;
    }
  
    for (i = 1; i <= n; i++) {
        factorial *= i;
    }
    
    printf("%d! = %ld \n", n, factorial);
    
    return 0;
}
