#include <stdio.h>

int main(void) {
    int num, i, j;
    
    printf("Enter the side of the square: ");
    scanf("%d", &num);
    
    if (num < 1 || num > 20) {
        printf("Number must be b/w 1 and 20.\n");
        return 0;
    }
    
    for (i = 1; i <= num; i++) {
        for (j = 1; j <= num; j++) {
            if (i == 1 || i == num || j == 1 || j == num) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }
    
    return 0;
}
